@model Cocktail_Magician.Models.CreateReviewViewModel

@{
    ViewData["Title"] = "Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Cocktail Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="BarCrower" asp-controller="Cocktails" asp-action="Review">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="UserId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" hidden />
            <div class="form-group">
                <fieldset class="rating__stars">
                    <input type="radio" id="star5" asp-for="Rate" name="Rate" value="5" /><label class="full" for="star5" title="Awesome - 5 stars"></label>
                    <input type="radio" id="star4half" asp-for="Rate" name="Rate" value="4.5" /><label class="half" for="star4half" title="Pretty good - 4.5 stars"></label>
                    <input type="radio" id="star4" asp-for="Rate" name="Rate" value="4" /><label class="full" for="star4" title="Pretty good - 4 stars"></label>
                    <input type="radio" id="star3half" asp-for="Rate" name="Rate" value="3.5" /><label class="half" for="star3half" title="Meh - 3.5 stars"></label>
                    <input type="radio" id="star3" asp-for="Rate" name="Rate" value="3" /><label class="full" for="star3" title="Meh - 3 stars"></label>
                    <input type="radio" id="star2half" asp-for="Rate" name="Rate" value="2.5" /><label class="half" for="star2half" title="Kinda bad - 2.5 stars"></label>
                    <input type="radio" id="star2" asp-for="Rate" name="Rate" value="2" /><label class="full" for="star2" title="Kinda bad - 2 stars"></label>
                    <input type="radio" id="star1half" asp-for="Rate" name="Rate" value="1.5" /><label class="half" for="star1half" title="Meh - 1.5 stars"></label>
                    <input type="radio" id="star1" asp-for="Rate" name="Rate" value="1" /><label class="full" for="star1" title="Sucks big time - 1 star"></label>
                    <input type="radio" id="starhalf" asp-for="Rate" name="Rate" value="0.5" /><label class="half" for="starhalf" title="Sucks big time - 0.5 stars"></label>
                </fieldset>
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="row">
                <!-- Comment Start -->
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Comment" class="control-label">Message </label>
                        <textarea asp-for="Comment" class="form-control" rows="8" ></textarea>
                        <span asp-validation-for="Comment" class="text-danger">*</span>
                    </div>
                </div>
                <!-- Comment End -->
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

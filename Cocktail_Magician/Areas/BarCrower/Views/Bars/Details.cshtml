                        <p>@Model.Information</p>
                        <h5 class="mt-30">Cocktails offered</h5>
                        <!-- Make a foreach loop to get all cocktails the bar offers start -->
                        <ul class="list-icon-data-attr font-ionicons">
                            @foreach (var cocktail in Model.BarCocktailViewModels)
                            {
                                <li data-content="&#xf383"> @Html.ActionLink(cocktail.CocktailName, "Details", "Cocktails", new { id = cocktail.CocktailId }, null) </li>

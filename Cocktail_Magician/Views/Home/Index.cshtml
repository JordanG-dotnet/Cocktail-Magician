@model TopRatedHomePageViewModel
<!--Top Cocktails start-->
<div class="section-title">
    <h2><span><span>Top</span> Cocktails</span></h2>
</div>
<div class="row cols-1 cols-sm-2 cols-lg-4 gap-2 mb-20">
    @foreach (var cocktail in Model.TopCocktails)
    {
        <div class="col">
            <figure class="destination-grid-item-01">
                <a href="#">
                    <div class="image">
                        <img src="@cocktail.Picture" alt="image" />
                    </div>
                    <figcaption class="content">
                        <h5>@cocktail.Name</h5>

                        <div class="rating-item rating-sm rating-inline clearfix">
                            <div class="rating-icons">
                                <input type="hidden" class="rating" data-filled="rating-icon ri-star rating-rated" data-empty="rating-icon ri-star-empty" data-fractions="2" data-readonly value="@cocktail.Rating" /> @cocktail.Rating
                            </div>
                            <p class="rating-text font600 text-muted font-12 letter-spacing-1"></p>
                        </div>
                    </figcaption>
                </a>
            </figure>
        </div>
    }
</div>
<!--Top Cocktails end-->

<div class="clear mb-100"></div>

<!--Top Bars start-->
<div class="section-title">
    <h2><span><span>Top</span> Bars</span></h2>
</div>
<div class="row equal-height cols-1 cols-sm-2 cols-lg-3 gap-20 mb-30">
    @*<partial name="_TopRatedBars" />*@
    @foreach (var bar in Model.TopBars)
    {
        <div class="col">
            <figure class="tour-grid-item-01">
                <a asp-area="BarMagician" asp-controller="Bars" asp-action="Details" asp-route-id="@bar.BarId">
                    <div class="image">
                        <img src="@bar.Picture" alt="images" />
                    </div>
                    <figcaption class="content">
                        <h5>@bar.Name</h5>
                        <ul class="item-meta">
                            <li>
                                <i class="elegent-icon-pin_alt text-warning"></i> @bar.Address
                            </li>
                            <li>
                                <div class="rating-item rating-sm rating-inline clearfix">
                                    <div class="rating-icons">
                                        <input type="hidden" class="rating" data-filled="rating-icon ri-star rating-rated" data-empty="rating-icon ri-star-empty" data-fractions="2" data-readonly value="@bar.Rating" /> @bar.Rating
                                    </div>
                                    <p class="rating-text font600 text-muted font-12 letter-spacing-1">26 reviews</p>
                                </div>
                            </li>
                        </ul>
                    </figcaption>
                </a>
            </figure>
        </div>
    }
</div>
<!--Top Bars end-->
